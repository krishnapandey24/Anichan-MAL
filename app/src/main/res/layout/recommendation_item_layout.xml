<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardView2"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@drawable/white_rectangle"
    android:padding="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/titleView2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:fontFamily="sans-serif-medium"
        android:maxLines="2"
        android:text="Demon Slayer The Movie : Mugen Train"
        android:textColor="@color/listItemTitleTextColor"
        android:textSize="15sp"
        app:layout_constraintTop_toTopOf="@+id/posterView"
        tools:layout_editor_absoluteX="138dp" />

    <TextView
        android:id="@+id/formatView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Summer 2021"
        android:textSize="13sp"
        tools:layout_editor_absoluteX="184dp"
        tools:layout_editor_absoluteY="64dp" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/posterView"
        android:layout_width="110dp"
        android:layout_height="167dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearanceOverlay="@style/posterView"
        app:srcCompat="@drawable/demon_slayer" />

</androidx.constraintlayout.widget.ConstraintLayout>
