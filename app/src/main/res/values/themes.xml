<resources>
    <!-- Base application theme. -->
    <style name="Theme.Anichan" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/mainBlue</item>
        <item name="colorPrimaryVariant">@color/darkBlue</item>
        <item name="colorOnPrimary">@color/bgWhite</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/green</item>
        <item name="backgroundColor">@color/bgWhite</item>
        <item name="bottomSheetDialogTheme">@style/BottomSheetDialog</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >?attr/colorPrimaryVariant</item>


        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Anichan2" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/mainBlue</item>
        <item name="colorPrimaryVariant">@color/buttonBlue</item>
        <item name="colorOnPrimary">@color/bgWhite</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/textColor</item>
        <item name="backgroundColor">@color/bgWhite</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" >?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>


    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">
            @drawable/splash_screen
        </item>
    </style>
    <style name="BottomSheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="colorPrimary">@color/blue</item>
        <item name="bottomSheetStyle">@style/bottomSheetStyleWrapper</item>
    </style>

    <style name="bottomSheetStyleWrapper" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>


    <style name="Theme.Anichan3" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/darkBlue</item>
        <item name="colorPrimaryVariant">@color/darkBlue</item>
        <item name="colorOnPrimary">@color/bgWhite</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/textColor</item>
        <item name="backgroundColor">@color/bgWhite</item>
        <item name="bottomSheetDialogTheme">@style/BottomSheetDialog</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="roundedImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeBottomLeft">20dp</item>
        <item name="cornerSizeBottomRight">20dp</item>
    </style>

    <style name="posterView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">10dp</item>
    </style>

    <style name="posterViewOnSide" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeBottomLeft">10dp</item>
        <item name="cornerSizeTopLeft">10dp</item>
    </style>

    <style name="backgroundPosterView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">10dp</item>
    </style>

    <style name="videoView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">18dp</item>
    </style>

    <style name="ListItemLayoutPosterView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeBottomRight">18dp</item>
        <item name="cornerSizeTopRight">18dp</item>
    </style>

    <style name="TabLayoutTextSize">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TabLayoutTextSize2">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTheme.Picker" parent="Theme.AppCompat.Light.NoActionBar" >
        <item name="android:textColorPrimary">@color/blue</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SpinnerStyle">
        <item name="android:background">@drawable/spinner_bg</item>
        <item name="android:popupElevation">3dp</item>
        <item name="android:popupBackground">@color/contentBackground</item>
    </style>


    <style name="SpinnerStyle2">
        <item name="android:background">@drawable/spinner_bg</item>
        <item name="android:popupElevation">3dp</item>
        <item name="android:popupBackground">@color/contentBackground</item>
        <item name="android:paddingRight">4dp</item>
    </style>

    <style name="GenresChipStyle" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textColor">@color/viewAnimeMainTextColor</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">14.4sp</item>
    </style>

    <style name="TabIndicatorText" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textColor">@color/viewAnimeMainTextColor</item>
        <item name="android:textSize">16sp</item>
    </style>



    <style name="circularImageView" parent="">
        <item name="cornerSize">50%</item>
    </style>

    <style name="mal_progress_bar">
        <item name="colorAccent">@color/mal_blue</item>
    </style>
</resources>